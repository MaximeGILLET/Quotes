@model Quotes.Models.MailViewModel
@{
    ViewBag.Title = "_Detail";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="col-lg-12">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Message From : </span>
                <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1" readonly>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Object : </span>
                <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1" readonly>
            </div>
        </div> 
    </div>
    <div class="panel-body">
        @Html.Raw(Model.Content)
    </div>
    <div class="panel-footer">
        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;Back</button>
    </div>
</div>

